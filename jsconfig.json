{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,

        "paths": {
            "@/*": ["./src/*"],
            "@public/*": ["./public/*"],
            "@images/*": ["./src/images/*"]
        }
        // so paths not working in vscode
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "src/*"
    ]
}